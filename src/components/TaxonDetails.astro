---
import type { CollectionEntry } from "astro:content";
import ImageGallery from "./ImageGallery.astro";

interface Props {
  entry: CollectionEntry<"taxonomia">;
}
const { entry } = Astro.props as Props;
const {
  nombre_cientifico,
  autoridad,
  description,
  distribution,
  common_names,
  otros_nombres,
  image,
  images,
  references,
  notes,
} = entry.data;
---

<section class="taxon-details">
  {
    nombre_cientifico && (
      <p>
        <strong>Nombre científico:</strong> <em>{nombre_cientifico}</em>
      </p>
    )
  }
  {
    autoridad && (
      <p>
        <strong>Autoridad:</strong> {autoridad}
      </p>
    )
  }
  {notes && <p>{notes}</p>}
  {
    image && (
      <div class="featured">
        <img src={image} alt={`Imagen de ${entry.data.name}`} />
      </div>
    )
  }
  {
    description && (
      <div class="section">
        <h2>Descripción</h2>
        <p>{description}</p>
      </div>
    )
  }
  {
    distribution && (
      <div class="section">
        <h2>Distribución</h2>
        <p>{distribution}</p>
      </div>
    )
  }
  {
    common_names && (
      <div class="section">
        <h2>Nombres comunes</h2>
        <ul>
          {common_names.map((n: string) => (
            <li>{n}</li>
          ))}
        </ul>
      </div>
    )
  }
  {
    otros_nombres && (
      <div class="section">
        <h2>Otros nombres</h2>
        <ul>
          {otros_nombres.map((n: string) => (
            <li>{n}</li>
          ))}
        </ul>
      </div>
    )
  }

  <!-- Galería de imágenes -->
  {images && <ImageGallery images={images} />}

  {
    references && (
      <div class="section">
        <h2>Referencias</h2>
        <ul>
          {references.map((ref: { title: string; url: string }) => (
            <li>
              <a href={ref.url} target="_blank">
                {ref.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
    )
  }
</section>

<style>
  .taxon-details {
    margin: 2rem 0;
    font-size: 1rem;
    line-height: 1.6;
  }
  .featured img {
    max-width: 300px;
    max-height: 300px;
    border-radius: 0.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    margin-bottom: 1rem;
  }
  .section {
    margin-bottom: 1.5rem;
  }
  .section h2 {
    font-size: 1.25rem;
    color: #2f855a;
    margin-bottom: 0.5rem;
    border-bottom: 1px solid #c6f6d5;
    padding-bottom: 0.25rem;
  }
  ul {
    list-style: disc inside;
    padding: 0;
  }
  ul li {
    margin-bottom: 0.25rem;
  }
  a {
    color: #2b6cb0;
    text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
  }

  /* Cuerpo del archivo .md */

  .markdown-content h2 {
    margin-top: 1.5rem;
    color: #2f855a;
  }
  .markdown-content p {
    margin: 1rem 0;
    line-height: 1.6;
  }
</style>
